public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        // TODO code application logic here
        int songs;
        
        System.out.println("Please enter the nbr of songs");
        
        songs = input.nextInt();
        
        double dollarprice ;
        
        dollarprice= 0.99 * songs;
        
        System.out.println(dollarprice);
        
        System.out.println("The price is" + dollarprice);
        
    }
    
}

